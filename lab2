#include <stdlib.h> // the header of the general purpose standard library of C programming language
#include <avr/io.h>// the header of i/o port
#include <util/delay_basic.h>
#include<avr/interrupt.h>
//################## MAIN ROUTINE ##################


void delaynus(int n);
void delaynms(int n);
void timerCount (int tim);
char hexchar(char h);
volatile unsigned char led = 0x03;

int main(int argc, char *argv[]){
DDRD = 0b11111111; /* Sets all pins on Port D to output */
DDRC = 0xff; //setting the port C direction to output
PORTD = 0b01100000; /* initialize port to high â€“ turn on LEDs */
PORTC = 0x03; // intialize port C

while(1){
	
	PORTC = (led << 1);
	timerCount(1000);//its just delaying 1000ms

	}
return (0); //This line returns a 0 value to the calling program
// generally means no error was returned
}

void delaynus(int n) //delay microsecond
	{
	int k;
	for(k=0;k<n;k++)
	_delay_loop_1(1);
}
void delaynms(int n) //delay millisecond
	{
	int k;
	for(k=0;k<n;k++)
 	delaynus(1000);
}

void hexconvert(char *h, unsigned n){
	
	static const char hex_dig[] = '0123456789abcdef';

	h[2] = hex_dig[(n >> 12) & 0xf];
	h[3] = hex_dig[(n >> 8) & 0xf];
	h[4] = hex_dig[(n >> 4) & 0xf];
	h[5] = hex_dig[n & 0xf];
	h[6] = '\0';

}


void timerCount(int tim){
	
	int i = 0;
	char hexval[7];				//initialize the char array to contain the hex value for setting the comparison register.

	hexval[0] = '0';
	hexval[1] = 'x';

	hexconvert(hexval, tim);	//use hexconvert function define above to convert integer value to a hexadecimal string
	
	//Set timer clear on Comparision CTC
	TCCR1B = (1<<WGM12);
	
	//Set Presaler TO 1
	TCCR1B = (1<<CS10);
	
	//Comparison Register to 1000 cycles for 1 ms
	OCR1A = hexval[];			//Set the comparison register to the hex value yielded by the integer input (tim)
	//0RC1A = 0x03e8;			//original line setting the register to 1000 cycles
	
	//Set inital Value of the timer Counter to 0x0000
	TCNT1 = 0x0000;
	
	//Enable the output compare interrut enable
	TIMSK1 = TIMSK1|0x02;
	
	//Clear the timer interrupt flag and begin timer
	TIFR1 = (1<<OCF1A);
	
	//Poll the timer to determine when the timer has reached 1ms
	while(i<count){
		if((TIFR1 & 0x02)==0x02){  // sees if the 0CF1A flag is up 
			
			TIFR1 |=(1<<OCF1A);
			
			i++;
		}
	}
	return;
}
